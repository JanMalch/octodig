{
  "name": "octodig",
  "version": "0.0.1",
  "description": "octodig helps you dig into a GitHub repository in an editor look.",
  "author": "JanMalch",
  "scripts": {
    "ng": "ng",
    "prestart": "gulp",
    "start": "ng serve",
    "prebuild": "gulp",
    "build": "ng build --prod",
    "postbuild": "gulp stripMdi",
    "predeploy": "npm run build",
    "deploy": "firebase deploy",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "prettier": "prettier --write src/**/*.{ts,html,css,scss,md,yaml,yml}",
    "release": "standard-version",
    "// - DOCS & TOOLS": "exit -1",
    "preanalyze": "ng build --prod --namedChunks=true --stats-json",
    "analyze": "npx webpack-bundle-analyzer dist/octodig/stats-es2015.json",
    "depcruise:validate": "depcruise --validate .dependency-cruiser.js src/app",
    "depcruise:generate": "depcruise -T dot -x node_modules -v -- src/main.ts | dot -T png > docs/assets/images/depcruise.png",
    "compodoc": "compodoc -c .compodocrc.json"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://www.github.com/JanMalch/octodig"
  },
  "homepage": "https://octodig.web.app",
  "bugs": {
    "url": "https://github.com/JanMalch/octodig/issues"
  },
  "dependencies": {
    "@angular/animations": "~9.0.2",
    "@angular/cdk": "~9.0.1",
    "@angular/common": "~9.0.2",
    "@angular/compiler": "~9.0.2",
    "@angular/core": "~9.0.2",
    "@angular/fire": "^5.4.2",
    "@angular/forms": "~9.0.2",
    "@angular/material": "^9.0.1",
    "@angular/platform-browser": "~9.0.2",
    "@angular/platform-browser-dynamic": "~9.0.2",
    "@angular/router": "~9.0.2",
    "@ctrl/ngx-codemirror": "3.0.0",
    "@mdi/angular-material": "^4.9.95",
    "@ngneat/until-destroy": "^7.1.0",
    "codemirror": "5.51.0",
    "comparing": "0.0.3",
    "firebase": "^7.8.1",
    "ngx-markdown": "^8.2.2",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.3",
    "@angular/cli": "~9.0.3",
    "@angular/compiler-cli": "~9.0.2",
    "@angular/language-service": "~9.0.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@compodoc/compodoc": "^1.1.11",
    "@types/jasmine": "~3.5.3",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^13.7.0",
    "chalk": "^3.0.0",
    "codelyzer": "^5.1.2",
    "cz-conventional-changelog": "^3.1.0",
    "dependency-cruiser": "^7.2.0",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-debug": "^4.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^4.2.1",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.1.0",
    "karma-jasmine-html-reporter": "^1.5.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "protractor": "~5.4.3",
    "standard-version": "^7.1.0",
    "svgson": "^4.0.0",
    "through2": "^3.0.1",
    "ts-node": "~8.6.2",
    "tslint": "~6.0.0",
    "typescript": "~3.7.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 140
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "header": "",
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "Code Refactoring"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "test",
        "hidden": true
      },
      {
        "type": "build",
        "hidden": true
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
